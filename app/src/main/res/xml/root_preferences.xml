<PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory app:title="Forecast">

        <ListPreference
            app:defaultValue="7"
            app:entries="@array/number_of_days_labels"
            app:entryValues="@array/number_of_days_values"
            app:key="forecast_number_of_days"
            app:summary="Forecast period in days"
            app:title="Foreceast period" />

        <SwitchPreference
            app:key="forecast_cache_enabled"
            app:summary="Cache forecast in database"
            app:title="Cache enabled" />

    </PreferenceCategory>

</PreferenceScreen>